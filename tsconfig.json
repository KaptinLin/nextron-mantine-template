{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./renderer",
    "paths": {
      "@/*": ["*"],
      "@/apis/*": ["apis/*"],
      "@/config/*": ["config/*"],
      "@/components/*": ["components/*"],
      "@/layouts/*": ["layouts/*"],
      "@/utils/*": ["utils/*"],
      "@/hooks/*": ["hooks/*"],
      "@/providers/*": ["providers/*"],
      "@/types/*": ["types/*"],
      "@/schemas/*": ["schemas/*"],
      "@/styles/*": ["styles/*"],
      "@/store/*": ["store/*"],
      "@/queries/*": ["queries/*"],
      "@/public/*": ["./public/*"]
    }
  },
  "exclude": [
    "node_modules",
    "renderer/next.config.js",
    "app",
    "dist"
  ]
}
